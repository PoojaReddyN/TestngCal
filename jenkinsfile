pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
             steps {
                        bat 'mvn test'
                    }
                }

        stage('Deploy') {
             steps {
                        echo 'Deploying application...'
                        // Add deployment commands here
                    }
                }
            }

            post {
                success {
                    echo 'Build and tests passed successfully!'
                }
                failure {
                    echo 'Build failed. Check the logs.'
                }
            }
        }
